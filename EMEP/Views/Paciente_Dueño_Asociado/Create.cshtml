@model EMEP.Models.Paciente_Dueño_Asociado

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPa.cshtml";
}

<h2>Nuevo Paciente Asociadp</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
